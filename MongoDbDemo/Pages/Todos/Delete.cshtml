@page
@model MongoDbDemo.Pages.Todos.DeleteModel

@{
    ViewData["Title"] = "Delete To Do";
}

<h4>Are you sure you want to delete this To Do?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.AssignedTo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.AssignedTo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Todo.DueDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Todo.DueDate)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Todo.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-page="./Index">Cancel</a>
    </form>
</div>
